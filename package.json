{
  "name": "workspace",
  "private": true,
  "version": "1.0.0",
  "description": "Workspace for multiple applications and shared packages.",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.12.0"
  },
  "scripts": {
    "test": "pnpm run packages:test",
    "mobile": "pnpm --filter 'mobile' start",
    "web": "pnpm --filter 'web' dev",
    "packages": "pnpm --filter './packages/**' build",
    "packages:watch": "pnpm --filter './packages/**' watch",
    "packages:test": "pnpm --filter './packages/**' test",
    "db:migrate": "pnpm --filter '@-/db' migrate",
    "db:studio": "pnpm --filter '@-/db' studio"
  },
  "keywords": [],
  "overrides": {
    "semver": "7.5.2"
  },
  "devDependencies": {
    "@amnis/eslint-config-node": "^2.3.0",
    "@babel/core": "^7.23.9",
    "@do-ob/ts-config": "link:../config/packages/ts-config",
    "@expo/metro-runtime": "^3.1.3",
    "@expo/webpack-config": "^19.0.1",
    "@types/node": "^20",
    "@types/react": "^18.2.59",
    "@types/react-dom": "^18.2.19",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.2",
    "dotenv": "^16.4.5",
    "drizzle-kit": "^0.20.14",
    "drizzle-orm": "^0.29.4",
    "eslint": "^8.57.0",
    "eslint-config-next": "14.1.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "expo": "^50.0.7",
    "expo-status-bar": "^1.11.1",
    "expo-system-ui": "^2.9.3",
    "nativewind": "^4.0.36",
    "next": "^14.1.0",
    "pg": "^8.11.3",
    "postcss": "^8",
    "postcss-import": "^16.0.1",
    "postcss-loader": "^8.1.0",
    "postgres": "^3.4.3",
    "react": "18.3.0-canary-2f8f77602-20240229",
    "react-dom": "18.3.0-canary-2f8f77602-20240229",
    "react-native": "^0.73.4",
    "react-native-web": "^0.19.10",
    "tailwindcss": "3.3.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vite": "^5.1.4",
    "vite-tsconfig-paths": "^4.3.1",
    "vitest": "^1.3.1"
  }
}